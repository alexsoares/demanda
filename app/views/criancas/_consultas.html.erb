           <center>
             <td><font size=3>Total  Crianças  Cadastradas</font> </td>
             <td><font size=3><%= link_to_remote(Crianca.c.length, :update => "listagem", :url => { :action => "busca"}) %></font></td>
           </center>
        </tr>
        <tr>
           <center>
             <td><font size=3>Total Crianças Matriculadas </font></td>
             <td><font size=3><%= link_to_remote(Crianca.b_u.length, :update => "listagem", :url => { :action => "busca_unidade"}) %></font></td>
           </center>
        </tr>
        <tr>
           <center>
             <td><font size=3>Total Crianças Não Matriculadas </font></td>
             <td><font size=3><%= link_to_remote(Crianca.b_dm.length, :update => "listagem", :url => { :action => "busca_demanda"}) %></font></td>
           </center>
        </tr>


  </center>
 </div>

