<script src="/javascripts/jquery.js" type="text/javascript"></script>
<script src="/javascripts/jquery-ui.js" type="text/javascript"></script>
<script src="/javascripts/jrails.js" type="text/javascript"></script>

<div id="conteudo">
  <div id="topo">
    <h1 align="right">Alteração do Cadastro de Crianças</h1>
    <h4 align="right" > <font   color="#ff0000"> S I S D E M A N  --  Ver.1.0       . </font></h4>
  </div>
  <% form_for(@crianca) do |f| %>
    <%= f.error_messages %>

    <p>
    <fieldset>
      <legend><font size=4>Dados da Inscrição</font></legend>

     <p>
      <%= f.label :servidor_publico, 'Filho de servidor publico concursado?' %><br />
      <%= f.check_box :servidor_publico %>
     </p>

      <p>
      <th>Unidade</th>
      <%= f.collection_select :unidade_id, @unidades, :id, :nome %> <br />
      </p>
      <p>
        <th>Região</th>
        <%= f.collection_select :regiao_id, @regiaos, :id, :nome %> <br />
      </p>
      <p>
        <%= f.label :created_at, 'Cadastrado em:' %>
        <%=h @crianca.created_at.strftime("%e/%m/%Y - %H:%M horas")%> <br />
         <br/>
        <%= f.label :created_at, 'Alteração da data de cadastramento:' %><br />
        <%= f.datetime_select :created_at, :order => [:day, :month, :year] %>


      </p>
   </fieldset><br/>
   <fieldset>
    <legend><font size=4>Dados da Criança</font></legend>
      
        <th>Nome         </th>
        <%= f.text_field :nome %><br />
        <th>Nascimento   </th>
        <%= f.date_select(:nascimento, :order => [:day, :month, :year], :start_year => (Date.today.year), :end_year => (Date.today.year - 30))%><br />
        <th>Nome da Mãe</th>
        <%= f.text_field :mae %><br />
        <th>Classificação</th>
        <%= f.collection_select :grupo_id, @grupos, :id, :nome %> <br />
        <%=h @crianca.onde_classifica%>
          <%= observe_field("crianca_grupo_id",
          :url => {:action => 'grupo_crianca'},
          :with =>"crianca_grupo_id",
          :on => "blur",
          :update => "onde_classifica")%>
        <br />
        <th>Endereço      </th>
        <%= f.text_field :endereco %><br />
        <th>Número        </th>
        <%= f.text_field :numero %><br />
        <th>Complemento   </th>
        <%= f.text_field :complemento %><br />
        <th>Bairro        </th>
        <%= f.text_field :bairro %><br />
        <th>Telefone Residencial    </th>
        <%= f.text_field :tel1 %><br />
        <th>Telefone Recado    </th>
        <%= f.text_field :tel2 %><br />
        <th>Nome (recado) </th>
        <%= f.text_field :nomerecado %><br />
        <th>Celular       </th>
        <%= f.text_field :celular %><br />
  </fieldset><br />

  <fieldset>
   <legend><font size=4>Acompanhante</font></legend>
        <th>Responsável</th>
        <%= f.check_box :responsavel %><br />
        <th>Nome Responsável   </th>
        <%= f.text_field :nome_responsavel %><br />
        <%= f.label :parentesco %>
        <%= f.text_field :parentesco %> <font color="red"> [Opções de alteração: Mãe, Pai, Avó, Avô, Tia, Tio, Irmã, Irmão, Tutor, Outros]</font><br />
        <th>Trabalha      </th>
        <%= f.check_box :trabalha %>     <th>SIM</th><br />
        <th>Local Trabalho</th>
        <%= f.text_field :local_trabalho %><br />
        <th>Fone Trabalho</th>
         <%= f.text_field :fonetrabalho %><br />
    
  </fieldset>
  <div id="region">
  <br/>
    <fieldset>
      <legend><font size=4>Preferências</font></legend>
    <script>
        $(document).ready(function()
          {
            $("#dropdownbutton").click(function ()
              {
                $("#menu").slideToggle("high");
              });
          });
    </script>
<p>
   <%= f.label :transferencia, 'Transferido de outra região?' %><br />
   <a href="#" id="dropdownbutton"><%= f.check_box :transferencia %></a><th>SIM</th><br />
       <ul id="menu" style="display:none">
         <%= f.label :obs_transf, 'Obs' %><br />
         <%= f.text_area :obs_transf %><br />
       </ul>
      </p>

        <th>Opção 1       </th>
        <%= f.collection_select :option1, @unidades, :id, :nome, :include_blank => '' %> <br />
        <th>Opção 2       </th>
        <%= f.collection_select :option2, @unidades, :id, :nome, :include_blank => '' %> <br />
        <th>Opção 3       </th>
        <%= f.collection_select :option3, @unidades, :id, :nome, :include_blank => '' %> <br />
        <th>Opção 4       </th>
        <%= f.collection_select :option4, @unidades, :id, :nome, :include_blank => '' %> <br />
        </fieldset>
  </div><br/>
  <fieldset>
    <legend><font size=4>Dados da Inscrição</font></legend>
      <th>Matriculado     </th>
      <%= f.check_box :matricula %><th>SIM</th><br />
      <th>Un.Matriculada</th>
      <%= f.collection_select :unidade_matricula, @unidades, :id, :nome, :include_blank => '' %> <br />
      <div id="unidade"></div>
      <%= observe_field("crianca_unidade_matricula",
          :url => {:action => 'autentica_matricula'},
          :with =>"crianca_unidade_matricula",
          :on => "blur")%>
      <th>Observação</th>
       <%= f.text_field :obs %><br />
  </fieldset><br/>

  <fieldset>
    <%= f.label :n_especial, 'Possui necessidade especial?' %>
    <%= f.check_box :n_especial %> <br/>
    <%= f.label :necessidade, 'Descricao Necessidade' %><br />
    <%= f.text_area :necessidade %><br />
  </fieldset>


  <fieldset>
    <p>
     <div id="Certeza">
      <%= f.submit "Atualizar" %>
     </div>
    </p>
  </fieldset>

  </p><br/>

  | <%= link_to 'Exibir', @crianca %> 
  | <%= link_to 'Voltar', criancas_path %> |

  <% end %>
</div>