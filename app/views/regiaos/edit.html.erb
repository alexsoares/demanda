<div id="conteudo">
   <div id ="topo">
    <br/>
    <h1>Alteração da Região</h1>
   </div>

   <% form_for(@regiao) do |f| %>
     <%= f.error_messages %>
       <p>
        <fieldset>
         <%= f.label :nome, 'Nome' %><br />
         <%= f.text_field :nome %>
        </fieldset>
       </p>
       <p>
         <fieldset>
           <p>
           <%= f.submit "Atualizar" %>
           <p/>
         </fieldset>
       </p>
     
   <% end %>
   
  <br/>
   |<%= link_to 'Exibir', @regiao %> |
   <%= link_to 'Voltar', regiaos_path %>|

</div>

