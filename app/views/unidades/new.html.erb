<div id="topo">
<br/>
<h1>Cadastro de Unidades</h1>
</div>
<fieldset>
<table>
<% form_for(@unidade) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nome, 'Nome' %><br />
    <%= f.text_field :nome %>
  </p>

  <p>

    <%= f.label :tipo, 'Tipo' %><br />
    <select id="_unidade_tipo" name="unidade[tipo]">
       <option value="0">---Selecione---</option>
       <option value="1">Creche</option>
       <option value="2">EMEI</option>
       <option value="3">Casa da criança</option>
       <option value="3">EMEF</option>
       <option value="3">CIEP</option>
    </select>

  </p>

  <p>
    <%= f.label :regiao_id, 'Região' %><br />
    <%= f.collection_select :regiao_id, @regiaos, :id, :nome, :include_blank => '---Selecione---' %>
  </p>
  <p>
    <%= f.submit "Cadastrar" %>
  </p>
<% end %>
</table>
</div>

<%= link_to 'Voltar', unidades_path %>
